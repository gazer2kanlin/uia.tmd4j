<?xml version="1.0" encoding="UTF-8"?>
<tmd>
	<taskSpace>
		<task name="CASE1">
			<source>MSSQL1</source>
			<target>MSSQL2</target>
			<sourceSelect table="human">
				<where>
					<column>id</column>
				</where>
			</sourceSelect>
			<targetUpdate table="people" />
			<nexts>
				<plan name="account">
					<sourceSelect table="human_acc">
						<where>
							<column source="id">human</column>
						</where>
					</sourceSelect>
					<targetUpdate table="people_acc">
						<columns>
							<column pk="true">id</column>
							<column source="human">people</column>
							<column>account</column>
						</columns>
					</targetUpdate>
				</plan>
			</nexts>
		</task>
		<task name="CASE2">
			<source>MSSQL1</source>
			<target>PGSQL1</target>
			<sourceSelect table="human">
				<where>
					<column>id</column>
				</where>
			</sourceSelect>
			<targetUpdate />
			<nexts>
				<plan name="account">
					<sourceSelect table="human_acc">
						<where>
							<column source="id">human</column>
						</where>
					</sourceSelect>
					<targetUpdate />
				</plan>
			</nexts>
		</task>
		<task name="CASE3">
			<source>PGSQL1</source>
			<target>PGSQL2</target>
			<sourceSelect table="human">
				<where>
					<column>id</column>
				</where>
			</sourceSelect>
			<targetUpdate />
			<nexts>
				<plan name="account">
					<sourceSelect table="human_acc">
						<where>
							<column source="id">human</column>
						</where>
					</sourceSelect>
					<targetUpdate />
				</plan>
				<plan name="TAIWAN">
					<rule>
						<criteria column="human_type" validate="startsWith">TW</criteria>
					</rule>
					<sourceSelect table="country_tw">
						<where>
							<column source="id">human</column>
						</where>
					</sourceSelect>
					<targetUpdate />
				</plan>
				<plan name="US">
					<rule>
						<criteria column="human_type">US</criteria>
					</rule>
					<sourceSelect table="country_us">
						<where>
							<column source="id">human</column>
						</where>
					</sourceSelect>
					<targetUpdate />
				</plan>
			</nexts>
		</task>
	</taskSpace>
